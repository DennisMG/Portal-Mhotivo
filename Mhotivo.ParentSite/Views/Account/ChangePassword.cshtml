@model Mhotivo.ParentSite.Models.ChangePasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />


<section class="nicdark_section nicdark_bg_greydark">

    <div class="nicdark_margin10">
        <div class="container">
            
                <div class="col-md-6 col-md-offset-3">
                   
                        @using (Html.BeginForm("ChangePassword", "Account", null, FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            
                             <h4 class="white">CAMBIAR CONTRASEÑA</h4>
                            <div class="nicdark_divider left small"><span class="nicdark_bg_white nicdark_radius"></span></div>
                            <div class="nicdark_space10"></div>


                                <!-- Name input-->
                                <div class="form-group">
                                    <h5 class="white"><label class="col-md-3 control-label">Contraseña Actual</label></h5>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control", placeholder = "Contraseña Actual", type = "password", required = "required" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <h5 class="white"><label class="col-md-3 control-label">Contraseña Nueva</label></h5>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", placeholder = "Contraseña Nueva", type = "password", required = "required" })

                                        </div>
                                 </div>

                                <div class="form-group">
                                    <h5 class="white"><label class="col-md-3 control-label">Confirmar Contraseña Nueva</label></h5>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña Nueva", type = "password", required = "required" })
                                        </div>
</div>

                                <!-- Form actions -->
                                <div class="form-group">
                                    <div class="col-md-12 text-right">
                                        <button type="submit" class="nicdark_mpopup_ajax nicdark_btn nicdark_bg_green small nicdark_shadow nicdark_radius white nicdark_press">Actualizar</button>
                                    </div>
                                </div>
                            
                        }

                    </div>
                </div>
            </div>
  </section>

    @{
        if (null != ViewBag.Message)
        {
            <text>
                <script type="text/javascript">
                    alert("@ViewBag.Message");
                </script>
            </text>
        }
    }
