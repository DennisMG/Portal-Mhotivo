@using System.Linq
@model IEnumerable<Mhotivo.Models.AdministrativeDisplayModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<h2>Entidades Administrativas</h2>

<a class="toAdd" data-toggle="modal" role="button" data-id="Administrative/Add"><span class="btn btn-small btn-primary">Agregar Entidad Administrativa</span></a>
<div class="space"></div>
@if (!Model.Any())
{
    <div class="well well-large">
        <h4 class="blue">Tabla Vacia</h4>
        No hay registros a mostrar.
    </div>
}
else
{
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.UrlPicture)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.IdNumber)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.State)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td data-id="Administrative/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">
                        <div id="Photo">
                            @Html.ValidationSummary(true)
                            @{
                var imgSrc = "";
                if (item.Photo != null)
                {
                    var base64 = Convert.ToBase64String(item.Photo);
                    imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                }
                            }
                            <img alt="150x150" height="150" width="150" src="@imgSrc" />
                        </div>
                        <div class="text">
                        </div>
                    </td>

                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>
                        <a href="~/Administrative/Edit/@Html.DisplayFor(modelItem => item.Id)"><i class="icon-edit bigger-120"></i></a>
                        @using (Html.BeginForm("Delete", "Administrative", new { id = Html.DisplayFor(modelItem => item.Id) }, FormMethod.Post,
                            new { id = "Form_" + Html.DisplayFor(modelItem => item.Id) + "_Val", style = "display: none" })) { }
                        <input type="hidden" id="@Html.DisplayFor(modelItem => item.Id)_Val_Message"
                               value="¿Realmente desea eliminar el registro de @Html.DisplayFor(modelItem => item.FullName)?" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

<!-- Modal -->
<div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
    <div id="body" class="modal-body">

    </div>
</div>