@using System.Web.Mvc.Html
@model Mhotivo.Models.AcademicYearRegisterModel

@{
    ViewBag.Title = "Agregar Año Académico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section AddToHead{
    <style type="text/css">
        span.InputLabel {
            width: 567px;
            height: 15px;
            font-size: 10px;
            margin: 0 0 10px 0;
            vertical-align: text-top;
            font-weight: bold;
        }
    </style>
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

@using (Html.BeginForm("Add", "AcademicYear", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
{
    @Html.ValidationSummary(true)
    <h2>Agregar Año Académico</h2>

    <p>
        <a href="../AcademicYear/Index" data-dismiss="modal" class="btn btn-small">
            <i class="icon-remove"></i>
            Cancel
        </a>

        <button type="submit" class="btn btn-small btn-primary">
            <i class="icon-ok"></i>
            Agregar
        </button>
    </p>
    <div>
        
    </div>
    <div id="address" style="width: 500px;">
        <div id="mainAddress">
            <input type="number" value="2000" min="1980" step="1" form="@Model.Year"/>
            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.Year)</span>
            <p class="text-error">@Html.ValidationMessageFor(model => model.Year)</p>
        </div>
    </div>
    <br style="clear: left;" />
    <div>
        <p>
            <a href="../AcademicYear/Index" data-dismiss="modal" class="btn btn-small">
                <i class="icon-remove"></i>
                Cancel
            </a>

            <button type="submit" class="btn btn-small btn-primary">
                <i class="icon-ok"></i>
                Agregar
            </button>
        </p>
    </div>

}