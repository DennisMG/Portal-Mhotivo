@model Mhotivo.Models.NotificationCommentRegisterModel

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<div id="body" class="modal-body" style="max-height: 500px;">
   
        <fieldset>
            <legend class="pagination-centered">Agregar un comentario</legend>
            @using (Html.BeginForm("Add", "NotificationComment", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
            {
                @Html.HiddenFor(x => x.Notification)

                <div class="pagination-centered">
                    
                    <div class="control-group">
                        @Html.TextAreaFor(x => x.CommentText, new { @class = "form-control", @style = "resize: none; width: 90%", placeholder = "Escriba su mensaje aquí", required = "required", rows = "5", maxlength = "1000"})
                        <br/>
                        <p class="text-error">@Html.ValidationMessageFor(model => model.CommentText)</p>


                    </div>
                    <button type="submit" class="btn btn-small btn-primary">
                        <i class="icon-ok"></i>
                        Agregar
                    </button>
                </div>
                

            }
        </fieldset>

</div>





