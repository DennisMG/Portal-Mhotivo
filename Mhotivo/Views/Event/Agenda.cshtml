@model IEnumerable<Mhotivo.Models.AppointmentDiary>

@{
    ViewBag.Title = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<h2>Approve Events</h2>
<div class="btn btn-small">@Html.ActionLink("Go to Approve","Principal","Event")</div>
@if (!Model.Any())
{
    <div class="well well-large">
        <h4 class="blue">Tabla Vacía</h4>
        No hay nigun evento
    </div>
}
else
{
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
        <thead>
            <tr>
			    <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.DateTimeScheduled)</th>
                <th>@Html.DisplayNameFor(model => model.AppointmentLength)</th>
                <th>@Html.DisplayNameFor(model => model.Creator)</th>
                <th>@Html.DisplayNameFor(model => model.IsAproveed)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(modelItem => item.Id)</th>
                    <th>@Html.DisplayFor(modelItem => item.Title)</th>
                    <th>@Html.DisplayFor(modelItem => item.DateTimeScheduled)</th>
                    <th>@Html.DisplayFor(modelItem => item.AppointmentLength)</th>
                    <th>@Html.DisplayFor(modelItem => item.Creator.DisplayName)</th>
                    <th>@Html.DisplayFor(modelItem => item.IsAproveed)</th>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
        <div id="body" class="modal-body">
        
        </div>
    </div>
}    